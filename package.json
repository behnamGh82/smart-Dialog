{
  "name": "bns-smart-dialog",
  "version": "0.1.0",
  "description": "A responsive smart dialog/drawer component for React with MUI + Tailwind support.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.esm.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "dev:example": "vite --config example/vite.config.ts",
    "build": "npm run build:types && vite build",
    "build:types": "tsc -p tsconfig.app.json --emitDeclarationOnly",
    "lint": "eslint .",
    "preview": "vite preview",
    "release": "npm publish --access public"
  },
  "keywords": [
    "react",
    "mui",
    "tailwind",
    "dialog",
    "drawer",
    "component",
    "smart-dialog"
  ],
  "author": "behnam ghasemi",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "@mui/material": ">=5",
    "@mui/icons-material": ">=5"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/styled-engine-sc": "^7.3.2",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "tailwindcss": "^4.1.12",
    "@tailwindcss/vite": "^4.1.12",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  }
}